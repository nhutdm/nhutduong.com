---
import type { HTMLAttributes } from 'astro/types';
import { cva, type VariantProps } from 'class-variance-authority';
import { cn } from '@/utils/ui-utils';

type BadgeProps = HTMLAttributes<'div'>;

type Props = VariantProps<typeof badgeVariants> & BadgeProps;

const badgeVariants = cva(
  'not-prose inline-flex items-center rounded-md border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2',
  {
    variants: {
      variant: {
        default: 'border-transparent bg-primary text-primary-foreground shadow hover:bg-primary/80',
      },
    },
    defaultVariants: {
      variant: 'default',
    },
  }
);

const { variant = 'default', class: className, ...rest } = Astro.props;
---

<div class={cn(badgeVariants({ variant, className }))} {...rest}>
  <slot />
</div>
